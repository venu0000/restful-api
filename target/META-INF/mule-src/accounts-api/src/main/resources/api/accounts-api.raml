    responses:
      "201":
        body:
          properties:
            message:
              example: account modified (but not really)
              type: string
      "400": {}
    description: "it is used to update in the record "
    body:
      items:
        properties:
          id?:
            example: "1"
            type: string
          firstname?:
            example: venu
            type: string
          lastname?:
            example: gopal
            type: string
          address?:
            example: hyd
            type: string
          postal?:
            example: "464738"
            type: string
          country?:
            example: india
            type: string
          miles?:
            example: 123
            type: number
            format: int
